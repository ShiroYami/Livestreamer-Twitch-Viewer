<Window x:Class="LivestreamerTwitchViewer.Quality"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LivestreamerTwitchViewer"
        mc:Ignorable="d"
        Title="Quality" Height="300" Width="300">
    <StackPanel>
        <TextBlock Text="Add the quality you want..." FontWeight="Bold" HorizontalAlignment="Center" Margin="0,50,0,0"/>
        <TextBox x:Name="quality" Width="150" Height="30" VerticalAlignment="Top" Margin="0,19.7,0,0"/>
        <Button x:Name="adder" Content="Add" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="20" Margin="30,20,0,0" Click="adder_Click" FontWeight="Bold"/>
    </StackPanel>
</Window>
